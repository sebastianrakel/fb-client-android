<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:key="hostname"
        android:title="@string/pref_hostname_display_name"
        android:defaultValue="@string/pref_default_hostname_display_name"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="apikey"
        android:title="@string/pref_apikey_display_name"
        android:defaultValue="@string/pref_default_apikey_display_name"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <Preference
        android:key="getApikey"
        android:text="Get Apikey"
        android:summary="Get Apikey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</PreferenceScreen>
